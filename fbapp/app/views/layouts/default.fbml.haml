%fb:fbml
  = stylesheet_link_tag 'default'
  %style
  #main
    #head{:style=>"background: transparent url(#{image_path('header_bg.jpg')}) repeat-x;"}
      #top-menu
        = render :partial => 'menus/top_menu'
      #head-logo
        =link_to image_tag("logo_header.png",{:border=>"0"}), root_path;
      #main-menu
        = render :partial => 'menus/main_menu'
    #featured-box
      = render :partial=> 'shared/feature_content'
    #content-container
    #left-column
      = yield :layout
    #right-column
      = yield :sidebar_content
    #footer
      = render :partial => 'menus/footer_menu'
